<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReadClaimActivity">

    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="596dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.518">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="@string/read_claim"
            android:textColor="#000000"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/claim_id"
                android:layout_width="131dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:shadowColor="#B3ABAB"
                android:text="@string/read_id" />

            <TextView
                android:id="@+id/read_claim_id"
                android:layout_width="193dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/read_claim_id" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/issuing_date"
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/read_claim_issuing_date" />

            <TextView
                android:id="@+id/read_claim_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/read_claim_date" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/claim_title" />

            <TextView
                android:id="@+id/read_claim_title"
                android:layout_width="74dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/read_claim_title" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="11dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/claim_plate_number" />

            <TextView
                android:id="@+id/read_claim_plate_number"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/read_claim_plate_number" />

        </LinearLayout>

        <TextView
            android:id="@+id/claim_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/claim_description" />

        <TextView
            android:id="@+id/read_claim_description"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="@string/read_claim_description" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/claim_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/claim_status" />

            <TextView
                android:id="@+id/read_claim_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/read_claim_status" />
        </LinearLayout>

        <Button
            android:id="@+id/read_claim_back_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="150dp"
            android:layout_marginLeft="150dp"
            android:text="@string/read_claim_back_button"
            tools:visibility="visible" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>